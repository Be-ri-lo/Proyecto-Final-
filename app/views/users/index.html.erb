
  <div class="d-flex" id="">
    <!-- Sidebar -->
    <div id="sidebar-container" class="bg-primary">
      <div class="logo">
        <h4 class="text-light font-weight-bold mb-0">Partner</h4>
      </div>
      <div class="menu">
        <ul class="list-group list-group-flush">
          <li class="d-block text-light p-3 border-0"><i class="icon ion-md-people lead mr-2"></i>  <%= current_user.name %></li>
          <li class="d-block text-light p-3 border-0"><i class="icon ion-md-stats lead mr-2"></i>  <%= current_user.email %></li>
          <li class="d-block text-light p-3 border-0"><i class="icon ion-md-apps lead mr-2"></i>  <%= link_to 'Nuevo entrenamiento', new_training_path, class: "d-block text-light p-3 border-0" %></li>
          <%# <li class="d-block text-light p-3 border-0"><i class="icon ion-md-person lead mr-2"></i> <%= current_user.total_partners </li>%>
          <li class="d-block text-light p-3 border-0"><i class="icon ion-md-settings lead mr-2"></i>  <%= link_to 'Edita tu perfil', edit_user_registration_path, class: "d-block text-light p-3 border-0"  %></li>
        </ul>
          <%= pie_chart @user_pie, legend: "bottom"%>
          <%= line_chart @user_line, legend: "bottom"%>
      </div>
    </div>

    <!-- Page Content -->
    <div id="content" class="w-100">

      <section class="py-3">
        <div class="container">
          <div class="row">
            <div class="col-lg-9 col-md-8">
              <h1 class="font-weight-bold mb-0">Bienvenido <%= current_user.name %></h1>
              <p class="lead text-muted">Revisa la última información</p>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-lg-3 col-md-6 d-flex stat my-3">
                  <div class="mx-auto">
                    <h6 class="text-muted">Has creado <%= current_user.trainings.count %> entrenamientos!</h6>
                    <h3 class="font-weight-bold">
                      <% if current_user.trainings.count >= 6 %>
                        <p> Eres un gran Atleta!</p>
                      <% else %>
                        <p> Puedes crear más!</p>
                      <% end %></h3>
                  </div>
                </div>
              </div>
            </div>
          
            <!--Entrenamientos realizados -->
            <div id="trainings" class=" card-body row row-cols-1 row-cols-md-3 g-4">
              <% current_user.trainings.reverse.each do |training| %>
                <div id="tr" class="col">
                  <div class="img card h-100">
                    <% if training.images.any? %>
                      <%= image_tag training.images.first.variant(resize: "500x500").processed %> <!--Chequear!!-->
                    <% end %>
                    <div class="card-body">
                      <h5 class="card-title"><%= training.name %></h5>
                      <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="fas fa-street-view"></i> <%= training.place.location %></li>
                        <li class="list-group-item"><i class="fas fa-running"></i> <%= training.sport %></li>
                        <li class="list-group-item"><i class="fas fa-signal"></i> <%= training.level %></li>
                        <li class="list-group-item"><i class="far fa-calendar-alt"></i> <%= training.date.strftime('%d-%m-%y -> %H:%M') %></li>
                      </ul>   
                    </div>
                  </div>
                </div>
              <% end %> 
            </div>
            <!--Partners-->
            <div class="container p-2">
              <div class="row">
                <div class="col-12">  
                  <div class="col-12 border border-secondary rounded">
                    <ul class="list-group p-2">
                      <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-info">
                        Partners
                      </li>
                      <%# <% current_user.accept_request.each do |user|%>
                        <%# <li class="list-group-item d-flex justify-content-between align-items-center"> %>
                          <%# <%= user.name %> 
                        <%# </li> %>
                      <%# <% end %> 
                    </ul>
                  </div>  
                </div>
              </div>
            </div>
          </div>
        </div>  
      </section>
    </div>
  </div>     




